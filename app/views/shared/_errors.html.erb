<% if resource.errors.present? %>
  <div class="alert alert-danger ">
    <h2><%= t('.header', count: resource.errors.count) %>:</h2>
    <p>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </p>
  </div>
<% end %>
