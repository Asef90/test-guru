<%= form_with model: [:admin, @badge], local: true do |form| %>
  <div class="form_group">
    <%= render 'shared/errors', resource: @badge %>
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title, class: 'form-control', placeholder: 'Enter title' %>
    </p>

    <p>
    <%= form.label :description %><br>
    <%= form.text_area :description, rows: 7, cols: 40, class: 'form-control',
                                     placeholder: 'Enter text' %>
    </p>

    <p>
      <%= form.label :image %><br>
      <%= form.text_field :image, class: 'form-control' %>
    </p>

    <p>
      <%= form.label :rule_name %><br>
      <%= form.collection_select :rule_name, Badge::RULE_NAMES, :to_s, :to_s, { prompt: true },
                                               { class: "form-control rule-name-control" } %>
    </p>

    <p class='rule-value-control hide'>
      <%= form.label :rule_value %><br>
      <%= form.number_field :rule_value, in: 0..Float::INFINITY,
                                         class: 'form-control rule-value-level' %>
      <%= form.collection_select :rule_value, Category.all, :id, :title, { prompt: true },
                                              { class: "form-control rule-value-category" } %>

    </p>

    <p>
      <%= form.submit options = { class: "btn btn-primary mt-1" } %>
    </p>
  </div>
<% end %>
