<tr>
  <td class="align-middle"><%= badge.title %></td>
  <td class="align-middle">
    <image src=<%= "#{badge.image}" %> alt=<%= "#{badge.title} image" %> >
  </td>
  <td class="align-middle"><%= badge.rule_name %></td>
  <td class="align-middle"><%= value_title(badge.rule_name, badge.rule_value) %></td>
  <td class="align-middle"><%= link_to t('.show'), admin_badge_path(badge) %></td>
  <td class="align-middle"><%= link_to t('.edit'), edit_admin_badge_path(badge) %></td>
  <td class="align-middle"><%= link_to t('.delete'),
                                       admin_badge_path(badge),
                                       method: :delete,
                                       data: { confirm: t('.confirm') } %></td>
</tr

