<div class="row justify-content-center mt-3">
  <div class="col col-md-6">
    <h1><%= t('.header', title: @test.title) %>"</h1>

    <%= link_to t('.new_question'), new_admin_test_question_path(@test) %>

    <h2><%= t('.total', count: @test.questions.count) %>:</h2>

    <div class="card border=primary mb-3 mt-4">
      <div class="card-body">
        <%= render @test.questions %>
      </div>
    </div>

    <p>
      <%= link_to t('.back'), admin_tests_path %> |
      <%= link_to t('.edit'), edit_admin_test_path(@test) %>
    </p>
  </div>
</div>
