<div class="row justify-content-center mt-3">
  <div class="col col-md-6">
    <h1><%= t('.header', title: @test_passage.test.title) %></h1>

    <%= content_tag :h2, class: "timer-countdown",
                         data: { finish_time: @test_passage.finish_time.to_s } do %>
    <% end %>

    <p>
      <%= t('.counter', num: @test_passage.question_num,
                        count: @test_passage.test.questions.count) %><br>
      <%= content_tag :div, class: 'progress_bar' do %>
        <%= content_tag :div, class: 'current_progress',
                              data: { max: @test_passage.test.questions.count,
                                      current: @test_passage.question_num } do %>

        <% end %>
      <% end %>
    </p>


    <h3><b><%= @test_passage.current_question.body %></b></h3>

    <%= render 'form' %>
  </div>
</div>

