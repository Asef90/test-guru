<%= form_with model: @test, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :level %><br>
    <%= form.number_field :level, in: 0..Float::INFINITY %>
  </p>

  <p>
    <%= form.label :category %><br>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
